{
  "type": "object",
  "comment": "Login",
  "properties": {
    "username": {
      "type": "string",
      "label": "username",
      "update": {
        "type": "action",
        "action": [
          "submit"
        ]
      },
      "selector": "[name=\"username\"]",
      "control": "text"
    },
    "password": {
      "type": "string",
      "label": "password",
      "update": {
        "type": "action",
        "action": [
          "submit"
        ]
      },
      "selector": "[name=\"password\"]",
      "control": "text"
    },
    "errorMessage": {
      "type": "string",
      "label": "errorMessage",
      "update": {
        "type": "none"
      },
      "control": "text",
      "selectContains": "Your account may be disabled or blocked or the username/password you entered is incorrect.",
      "selector": "font",
      "frameSelector": [
        null
      ]
    },
    "submit": {
      "type": "action",
      "parameters": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "selector": ".button",
      "control": "action.button"
    },
    "isLogin": {
      "type": "identifier",
      "selector": ".button[value='Login']",
      "control": "exists"
    }
  },
  "connect": [
    {
      "match": [
        "IsLogin",
        "isLogin"
      ],
      "screens": [
        "login"
      ]
    }
  ]
}
